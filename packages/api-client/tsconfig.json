{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "../tsconfig/base.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": false,
        "moduleResolution": "Bundler",
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
